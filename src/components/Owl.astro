---
import { Image } from "astro:assets";
import owl from "../images/owl.png";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<header class:list={[{ minimal: title === undefined }]}>
  <div class="container">
    <Image src={owl} height={250} alt="Vanbot owl" />
    {title && <h1>{title}</h1>}
  </div>
</header>
<style>
  header {
    --header-height: 100px;
    /* matching background color of owl image */
    background-color: #0d0c0a;
    color: var(--white);

    & .container {
      position: relative;
      height: var(--header-height);
    }
  }

  img {
    display: inline-block;
    height: var(--header-height);
    position: absolute;
    object-fit: contain;
    object-position: 0;
  }

  h1 {
    font-size: var(--font-500);
    text-align: right;
    position: absolute;
    bottom: var(--spacing-200);
    right: var(--spacing-200);
    font-weight: 300;
  }

  @media screen and (min-width: 500px) {
    header {
      --header-height: 120px;
    }

    .minimal {
      --header-height: 120px;

      & .container {
        overflow-y: hidden;

        & img {
          height: calc(2 * var(--header-height));
          object-fit: cover;
          object-position: 0 calc(var(--header-height) / 4);
          top: calc(var(--header-height) / 4 * -1);
        }
      }
    }
  }

  @media screen and (min-width: 768px) {
    header {
      --header-height: 150px;
    }
  }

  @media screen and (min-width: 1024px) {
    header {
      --header-height: 250px;
    }

    h1 {
      font-size: var(--font-800);
      bottom: var(--spacing-400);
      right: var(--spacing-400);
    }
  }
</style>
